<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="io.github.posaydone.filmix.ui.fragments.MovieListFragment"
        android:label="Movie List"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_movieSearchFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment"
        />
    </fragment>

    <fragment
        android:id="@+id/movieSearchFragment"
        android:name="io.github.posaydone.filmix.ui.fragments.MovieSearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_movie_search">
        <action
            android:id="@+id/action_movieSearchFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment"
        />
    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="io.github.posaydone.filmix.ui.fragments.MovieDetailFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="id"
            app:argType="integer"
            app:nullable="false" />
    </fragment>
</navigation>