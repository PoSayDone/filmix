#!/usr/bin/env bash
set -e
if [[ ! -d "/home/posaydone/Documents/AndroidStudioProjects/Filmix" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/posaydone/Documents/AndroidStudioProjects/Filmix")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/posaydone/Documents/AndroidStudioProjects/Filmix" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/posaydone/Documents/AndroidStudioProjects/Filmix/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/posaydone/Documents/AndroidStudioProjects/Filmix/.envrc" "/home/posaydone/Documents/AndroidStudioProjects/Filmix/.direnv"/*.rc
